<div class="container">
  <div class="row">
    <div class="entries_flex" style="margin-top: 100px;">
      <div class="entries_logo col-5">
        My Entries
      </div>

      <div class="gratefulness px-3 col">
          <%= render "daily_gratefulness"%>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-around" style="gap:390px;">
    <div class="mt-2">
      <%= link_to new_entry_path, class: "button" do%>
        <i class="fa-solid fa-pen"></i> NEW ENTRY
      <% end %>
    </div>

    <div class="d-flex justify-content-around align-items-center" >
      <%= render "calendar_search" %>
    </div>
  </div>

  <div class="row">
      <div class="entries_cards" >
          <%@entries.each do |entry|  %>
          <button class="btn w-25" onclick="location.href='/entries/<%=entry.id%>/edit'" >
            <div class="entries_card col-4">
                <%= render "entries_card", entry: entry %>
            </div>
          </button>
          <% end %>
      </div>
    </div>
   </div>

  <div class="row">
    <div class="d-flex justify-content-between" style="gap:390px;">
      <div class="px-3 col">
        <div style="width:50%;height:0;padding-bottom:109%;position:relative;"><iframe src="https://giphy.com/embed/VbEuHLBUPQm55MyqJg" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div>
      </div>

      <div class="entries_logo col-5">
        Good memory
      <h6> <%= @good_memory.content %></h6>
      <p><em><%= @good_memory.date.year %>, <%= @good_memory.date.month %> <%= @good_memory.date.day %></em></p>
      </div>
    </div>
  </div>




</div>
