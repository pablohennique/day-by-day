<div class="container">
  <div class="row">
    <div class="entries_flex" style="margin-top: 100px;">
      <div class="entries_logo col-5">
        My Entries
      </div>

      <div class="gratefulness px-3 col">
          <%= render "daily_gratefulness"%>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-around" style="gap:390px;">
    <div class="mt-2">
      <%= link_to new_entry_path, class: "button" do%>
        <i class="fa-solid fa-pen"></i> NEW ENTRY
      <% end %>
    </div>

    <div class="d-flex justify-content-around align-items-center" >
      <%= render "calendar_search" %>
    </div>
  </div>

  <div class="row">
      <% @entries_by_months.each do |key, value| %>
        <h2><%= Date::MONTHNAMES[key] %></h2>
        <div class="entries_cards" >
            <% value.each do |entry| %>
              <button class="btn w-25" onclick="location.href='/entries/<%=entry.id%>/edit'" >
                <div class="entries_card col-4">
                    <%= render "entries_card", entry: entry %>
                </div>
              </button>
            <% end %>
        </div>
      <% end %>
  </div>

  <%= render 'happy_memory', good_memory: @good_memory %>

</div>
