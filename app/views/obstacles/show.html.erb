  <%# Relevant entries block %>
    <div class="pb-5">
      <h2>Entries relevant to this obstacle</h2>
      <div class="row">
        <div class="entries_cards" >
          <% @entries.each do |entry| %>
            <a href="<%= edit_entry_path(entry) %>">
              <div class="entries_card col-4">
                  <%= render "entries/entries_card", entry: entry %>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
