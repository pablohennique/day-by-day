<div class="container-content">
  <div class="container">
    <div class="row">
      <div class="back-link">
        <%= link_to obstacles_path do%>
          <i class="fa-solid fa-arrow-left"></i> Back to all obstacles
        <% end %>
      </div>
      <div class="recos-heading">
        <div>
          <p>OBSTACLE IDENTIFIED</p>
          <h1><%= @obstacle.title %></h1>
          <h2 class="subtitle">Explore science-backed tactics to help you face this challenge</h2>
        </div>
      </div>

        <% if @obstacle.done %>
          <%= render "obstacle_resolved_card" %>
        <% else %>
          <%= (button_to "RESOLVE OBSTACLE", done_path, method:'patch', class:"bootstrap-override-button mt-2 mb-5") %>
        <% end %>

    </div>

