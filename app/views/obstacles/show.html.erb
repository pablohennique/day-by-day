<div class="container">

  <h1><%= @obstacle.title %></h1>
  <br>
  <%= @obstacle.done == false ? (button_to "Done", done_path, method:'patch') : "Done" %>

  <% @recommendations.each do |recommendation| %>
    <%= render "recommendation_card", recommendation: recommendation %>

    <div>
      <%= link_to "details of recommendations", recommendation_path(recommendation) %>
    </div>
  <% end %>

  <% @entries.each do |entry| %>
    <li><%= entry.content %></li>
  <% end %>
</div>
