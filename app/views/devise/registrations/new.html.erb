<div class="container-devise">
  <div class="row">

    <div class="col-sm-12 col-lg-4">
        <%= image_tag('homme-heureux-tenue-ordinateur-portable.jpg', class: 'image-devise') %>
    </div>

    <div class="container-form col-sm-12 col-lg-8" data-controller="annotate">
     <h2><span data-annotate-target="underline">Sign up</span></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

          <div class="form-inputs">

            <div class="row names">
              <div class="col-sm-12 col-lg-6">
                  <%= f.input :first_name,
                              required: true,
                              input_html: { autocomplete: "first_name" }%>
              </div>
              <div class="col-sm-12 col-lg-6">
                  <%= f.input :last_name,
                              required: true,
                              input_html: { autocomplete: "last_name" }%>
              </div>
            </div>

            <%# --END NAMES INPUTS-- %>

            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <%# --END INPUTS FORM-- %>

            <div class="form-actions">
              <%= f.button :submit, "SIGN UP", class:"button"%>
            </div>

        <% end %>

        <div class="mt-4">Already have an account? <%= render "devise/shared/links" %></div>
    </div>
    <%# --END FORM-- %>

  </div>
</div>
