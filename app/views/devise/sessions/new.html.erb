<div class="container-devise">
  <div class="row">

    <div class="col-sm-12 col-lg-4">
      <%= image_tag('portrait-fille-asiatique-travaille-exterieur-dans-cafe-assis-etudes-ordinateur-portable-sourit-heureux.jpg', class: 'image-devise') %>
    </div>

  <div class="container-form col-sm-12 col-lg-8" data-controller="annotate">
    <h2><span data-annotate-target="underline">Log in</span></h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name)%><br />
            <% end %>
          <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "LOG IN", class:'button' %>
        </div>
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="mt-5">No account yet?
          <%= link_to "Sign up", new_registration_path(resource_name)%><br />
        </div>
      <% end %>
    </div>
  </div>
</div>
